{% extends "::product.html.twig" %}

{% block title %}AppBundle:Product:list{% endblock %}

{% block content %}
<h1>Liste des activit√©s</h1>
 <div class="container">
    <div class="well well-sm">
        <strong>Display</strong>
        <div class="btn-group">
            <a href="#" id="list" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-th-list">
            </span>Liste</a> <a href="#" id="grid" class="btn btn-default btn-sm"><span
                class="glyphicon glyphicon-th"></span>Grille</a>
        </div>
    </div>
    <div id="products" class="row list-group">
{% for activity in activities  %}
    
        <div class="item  col-xs-4 col-lg-4">
            <div class="thumbnail">
              {%  if  activity.photos|length > 0 %}
                   
                <img class="group list-group-image" src=" {{ asset('/img/activity/'~activity.photos[0].name) }}" alt="" style="width: 400px; height: 250px"/>
                {% else %}
                    <img class="img-responsive" src="http://placehold.it/400x250/d3e4f3/428bca?text=photo+en+vacances+!" />
              {% endif %}
                <div class="caption">
                    <h4 class="group inner list-group-item-heading">
                        {{ activity.title }}
                    </h4>
                    <p class="group inner list-group-item-text">
                        {{ activity.description }}
                    </p>
                    <p class="group inner list-group-item-text">
                       {{ activity.address }}
                    </p>
                    <p class="group inner list-group-item-text">
                        {{ activity.zip }}
                    </p>
                    <p class="group inner list-group-item-text">
                        {{ activity.city }}
                    </p>
                    <div class="row">

                        <div class="col-xs-12 col-md-6">
                            <a class="btn btn-primary" href="{{ path('app_product_detail', {"id": activity.id })  }}">Voir les options</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
         
{% endfor %}
</div>
</div>
{% endblock %}
