{% extends "::product.html.twig" %}

{% block title %}AppBundle:Product:category{% endblock %}

{% block content %}
<h1>Liste des catégories </h1>
<div class="row">
{% for category in categories %}
 
        
    
      <div class="col-sm-6 col-md-4" >
        <div class="thumbnail" style=" height: 480px">
            <img src="{{ asset('/img/cat/'~category.photo)}}" alt="{{ category.name }}" style="width: 400px; height: 250px">
          <div class="caption">
            <a href="{{ path('app_product_list', {"id": category.id}) }}">
              <h3>{{ category.name }}</h3>
                </a>
            <p>{{ category.description }}</p>
            <p><a href="{{ path('app_product_list', {"id": category.id}) }}" class="btn btn-primary btn-block" role="button">Voir les activités</a> </p>
          </div>
        </div>
      </div>
   
{% endfor %}
 </div>
{% endblock %}
