{% extends "::product.html.twig" %}

{% block title %}AppBundle:Product:detail{% endblock %}

{% block content %}
<!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ activity.title }}
                    <small>Item Subheading</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <img class="img-responsive" src="http://placehold.it/750x500" alt="">
            </div>

            <div class="col-md-4">
                <h3> Description</h3>
                <p>{{ activity.description }}</p>
                <h3> Details activité </h3>
                <ul>
                    <li>{{ activity.address }}</li>
                    <li>{{ activity.zip }}</li>
                    <li> {{ activity.city }}</li>
                   
                </ul>
                <h3> Disponibilité  </h3>
                {%  for product in activity.products  %}
                <ul>
                    <li>
                        <span>{{ product.price }} €</span> -  
                        <span>{{ product.stock }}</span> -  
                        <span> {{ product.date|date('Y-m-d') }}</span>  
                        <span class="btn btn-success"> Reserver </span>  
                    </li>
                   
                </ul>
                {% endfor %}
            </div>

        </div>
        <!-- /.row -->

        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Activités similaire</h3>
            </div>
            
            {% for activity in activities %}
                
            <div class="col-sm-3 col-xs-6">
                <a href="{{ path('app_product_detail', {"id": activity.id })  }}">
                    <h4 class="page-header">{{ activity.title }}</h4>
                </a>
                <a href="#">
                    <img class="img-responsive portfolio-item" src="http://placehold.it/500x300" alt="">
                </a>
            </div>

            {% endfor %}

 

        </div>
        <!-- /.row -->
{% endblock %}
