{% extends "layout.html.twig" %}

{% block title %}
	{{ 'Blue Sheep : Reservation' }}
{% endblock %}

{% block content %}
<h1>Détail Reservation</h1>

<h2>Reservation n°{{ d_reservation.reservation.id }} </h2>

<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Panel title</h3>
	</div>
	<div class="panel-body">
		<p>Activité : {{ d_reservation.product.activity.title }}</p>  
		<p>Date : {{ d_reservation.product.date|date("d/m/Y") }}</p>  
		<p>Prix de base : {{ d_reservation.product.price }}€</p>  
		<p>Option : {{ productAtt ?: "pas d\'option" }}</p>
		<p>Quantité : {{ d_reservation.quantity }} </p>
		<p>Prix total : {{ d_reservation.totalPrice }} €</p>  
		
		{# <p>User detail : {{ user.gender }} {{ user.firstname }} {{ user.lastname }}<br>
		{{ user.address }}, {{ user.zip }} {{ user.city }}</p>#}
		<p><em>Reservé le {{ d_reservation.reservation.date|date("d/m/Y") }}</em></p> 
	</div>
</div>



<h2>Contacter le client à partir de ce formulaire : </h2>
	{{ form_start(form) }}
	{{ form_row(form.subject) }}
	{{ form_row(form.body) }}
	<div class ="form-btn-group pull-right">
		<button type="submit" class="btn btn-primary"><span class=" glyphicon glyphicon-envelope"></span> Send </button>
	</div>
	<div class="clearfix"></div>
	{{ form_end(form) }}
{% endblock %}
