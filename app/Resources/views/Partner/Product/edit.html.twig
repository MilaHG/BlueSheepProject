{% extends "layout.html.twig" %}

{% block title %}
	{{ new ? 'Add Product' : 'Edit product' }}
{% endblock %}

{% block content %}
<h1>{{ new ? 'Add product' : 'Edit product' }}</h1>
	{{ form_start(form) }}
	{{ form_row(form.date) }}
	{{ form_row(form.price) }}
	{{ form_row(form.stock) }}
	<div class ="form-btn-group pull-right">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
	<div class="clearfix"></div>
	{{ form_end(form) }}
	
	<a href="{{ path("app_partner_product_list", {"id" : product.activity.id}) }}">Back to the product list</a>
{% endblock %}
