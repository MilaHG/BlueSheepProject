{% block page_title  %}    <h1> Modification profil  </h1>{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
    
    <div class="form-group">
    <label for="exampleInputEmail1">Civilité : </label>
    {{ form_widget(form.gender) }}
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail1">Email : </label>
    {{ form_widget(form.email) }}
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail1">Nom de connexion : </label>
    {{ form_widget(form.username) }}
  </div>
 
   <div class="form-group">
    <label for="password">Mot de passe actuelle</label>
   {{ form_widget(form.current_password) }}
  </div>
  
  <div class="form-group">
    <label for="password"></label>
   {{ form_widget(form.plainPassword) }}
  </div>
    

  
  <div class="form-group">
    <label for="exampleInputEmail1">Nom : </label>
   {{ form_widget(form.firstname) }}
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail1">Prenom : </label>
   {{ form_widget(form.lastname) }}
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail1">Date de naissance : </label>
    {{ form_widget(form.birthdate) }}
  </div>
  <div class="form-group">
    <label for="company">Société : </label>
    {{ form_widget(form.company) }}
  </div>
  <div class="form-group">
    <label for="commercialRegistry">Siret : </label>
    {{ form_widget(form.commercialRegistry) }}
  </div>
  
  
  
  <div class="form-group">
    <label for="address">Adresse : </label>
    {{ form_widget(form.address) }}
  </div>
  
  <div class="form-group">
    <label for="city">Ville : </label>
    {{ form_widget(form.city) }}
  </div>
  
  <div class="form-group">
    <label for="zip">Code postal : </label>
    {{ form_widget(form.zip) }}
  </div>
  
  <div class="form-group">
    <label for="avatar"> Avatar : </label>
    {{ form_widget(form.photo) }}
  </div>
    <div>
        <input type="submit"  class="btn btn-primary" value="{{ 'profile.edit.submit'|trans }}" />
    </div>
{{ form_end(form) }}
