{% trans_default_domain 'FOSUserBundle' %}
{% block content %}    
<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <p> {{ user.gender }}</p>
    <p> {{ user.firstname }}</p>
    <p> {{ user.lastname }}</p>
    <p> {{ user.birthdate|date('Y-m-d') }}</p>
    <p> {{ user.registerDate|date('Y-m-d') }}</p>
   
    <p> {{ user.address }}</p>
    <p> {{ user.zip }}</p>
    <a href="{{ path('fos_user_profile_edit')  }}"><button class="btn btn-primary">Editer mon profil</button></a>
</div>
    
{% endblock %}

